<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyt.server.mapper.sys.IPermissionMapper">

    <resultMap id="BaseResultMap" type="com.hyt.server.entity.sys.Permission">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="permission" jdbcType="VARCHAR" property="permission"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="status" jdbcType="SMALLINT" property="status"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <!-- 查询权限列表 -->
    <select id="findAll"  resultMap="BaseResultMap">
        SELECT
            p.id,
            p.name,
            p.permission,
            p.type,
            p.status,
            p.create_time
        FROM
        permission p
        WHERE 1=1
        <if test="id != null and id != ''">and p.id = #{id}</if>
        <if test="name != null and name != ''">AND p.name like '${name}%'</if>
        <if test="type != null and type != ''">and p.type = #{type}</if>
        <if test="status != null and status != ''">and p.status = #{status}</if>
        <choose>
            <when test="sortName !=null and sortName!='id'">
                ORDER BY ${sortName} ${sortOrder}
            </when >
            <otherwise>
                ORDER BY p.create_time DESC
            </otherwise>
        </choose>
    </select>

    <!-- 查询权限列表 -->
    <select id="selectByPermissionName"  resultMap="BaseResultMap">
        SELECT
            p.id,
            p.name,
            p.permission,
            p.type,
            p.status,
            p.create_time
        FROM
          permission p
        WHERE status = 1
        <if test="id != null and id != ''">and p.id = #{id}</if>
        <if test="name != null and name != ''">AND p.name like '${name}%'</if>
        <if test="type != null and type != ''">and p.type = #{type}</if>
        <if test="status != null and status != ''">and p.status = #{status}</if>
        ORDER BY create_time DESC
    </select>

    <!-- 根据角色查询拥有权限信息 -->
    <select id="findPermissionByRoleId" resultMap="BaseResultMap">
        SELECT
            p.id,
            p.name,
            p.permission,
            p.type,
            p.status,
            p.create_time
        FROM
            permission p
        LEFT JOIN role_permission rp on rp.permission_id = p.id
        WHERE p.status = 1
        <if test="roleId != null and roleId != '' ">
            AND rp.role_id in
            <foreach item="item" index="index" collection="roleId.split(',')"  open="(" separator="," close=")">
                '${item}'
            </foreach>
        </if>
    </select>

</mapper>